{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch MakoBlog",
            "configurations": [
                ".NET Core Launch (web)",
                "Attach to Firefox"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "https://localhost:5001/",
            "webRoot": "${workspaceFolder}/MakoBlog/ClientApp/dist/",
            "profileDir": "${workspaceFolder}/.vscode/firefox_debug_profile",
            "keepProfileChanges": true,
            "skipFiles": [
                "${workspaceFolder}/MakoBlog/ClientApp/node_modules/**",
                "${workspaceFolder}/MakoBlog/ClientApp/dist/**",
                "http?(s):/**"
            ],
            "pathMappings": [
                {
                    "url": "webpack:///",
                    "path": "${workspaceFolder}/MakoBlog/ClientApp/"
                },
                {
                    "url": "ng:///",
                    "path": "${workspaceFolder}/MakoBlog/ClientApp/src/"
                }
            ],
            "showConsoleCallLocation": true
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/MakoBlog/bin/Debug/netcoreapp2.2/MakoBlog.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MakoBlog",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/MakoBlog/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}